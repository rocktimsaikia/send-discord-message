{
	"name": "send-discord-message",
	"version": "0.0.0",
	"description": "Send message to a Discord channel using webhooks.",
	"keywords": [
		"send-discord-message",
		"discord",
		"webhook",
		"message",
		"send",
		"discord-message"
	],
	"repository": "rocktimsaikia/send-discord-message",
	"funding": "https://github.com/sponsors/rocktimsaikia",
	"license": "MIT",
	"author": {
		"name": "Rocktim Saikia",
		"email": "rocktimthedev@gmail.com",
		"url": "https://rocktimsaikia.dev"
	},
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": ["dist"],
	"scripts": {
		"build": "tsup",
		"format": "biome format --write .",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write --unsafe ./src > /dev/null 2>&1 || exit 0",
		"release": "np --no-publish",
		"test": "vitest --run",
		"prepare": "husky"
	},
	"lint-staged": {
		"*": ["pnpm run lint:fix", "pnpm run format"]
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/node": "^22.14.1",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.1",
		"tsup": "^8.4.0",
		"tsx": "^4.19.3",
		"typescript": "^5.8.3",
		"vitest": "^3.1.1",
		"vitest-fetch-mock": "^0.4.5"
	},
	"packageManager": "pnpm@10.8.0",
	"engines": {
		"node": ">=18"
	},
	"tsup": {
		"entry": ["src/index.ts"],
		"format": ["cjs", "esm"],
		"minify": true,
		"clean": true,
		"dts": true
	}
}
